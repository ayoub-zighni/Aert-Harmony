                                                    <div class="desc">
                                                        <h5><a href="#">ayoub youpa</a></h5>
                                                        <p class="date">{{ commentaire.createdAt ? commentaire.createdAt|date('Y-m-d H:i:s') : '' }}</p>
                                                        <p class="comment">
                                                            {{ commentaire.message }}
                                                        </p>
                                                    </div>
                                                </div>
                                                <div class="reply-btn">
                                                       <a href="{{ path('app_commentaire_delete',{'id': commentaire.id})}}" class="btn-reply text-uppercase">Delete</a> 
                                                </div>
                                            </div>
                                        </div>
                                         {% endfor %}                                                                                                                                                           
                                    </div>
                                </div>    
                            </section>
