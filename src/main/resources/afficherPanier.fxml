<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="center" hgap="10" vgap="10" prefHeight="400.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AfficherPanierController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <TableView fx:id="tableView" prefHeight="300.0" prefWidth="480.0" GridPane.columnIndex="0" GridPane.columnSpan="3" GridPane.rowIndex="0">
        <columns>
            <TableColumn fx:id="idPanierColumn" text="ID" />
            <TableColumn fx:id="nomProduitColumn" text="Nom Produit" />
            <TableColumn fx:id="prixColumn" text="Prix" />
            <TableColumn fx:id="etatStockColumn" text="État Stock" />
            <TableColumn fx:id="quantiteColumn" text="Quantité" />
        </columns>
    </TableView>

    <Button fx:id="supprimerPanier" mnemonicParsing="false" onAction="#supprimerPanier" text="Supprimer" GridPane.columnIndex="2" GridPane.rowIndex="1" />

    <!-- Add buttons for incrementing and decrementing quantity -->
    <Button text="+" onAction="#incrementQuantity" GridPane.columnIndex="0" GridPane.rowIndex="1" prefWidth="60.0"/>
    <Button text="-" onAction="#decrementQuantity" GridPane.columnIndex="1" GridPane.rowIndex="1" prefWidth="60.0"/>

    <columnConstraints>
        <ColumnConstraints percentWidth="33.33"/>
        <ColumnConstraints percentWidth="33.33"/>
        <ColumnConstraints percentWidth="33.33"/>
    </columnConstraints>

    <rowConstraints>
        <RowConstraints percentHeight="100.0"/>
        <RowConstraints percentHeight="0.0"/>
    </rowConstraints>

</GridPane>
