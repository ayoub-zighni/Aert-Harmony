{% extends 'dashboard.html.twig' %}

{% block title %}Produits{% endblock %}
   {% block nav %}
    <li class="nav-item active">
      <a class="nav-link" href="{{ path('admin_produits_index')}}">
        <i class="mdi mdi-grid-large menu-icon"></i>
        <span class="menu-title">Produits</span>
      </a>
    </li>
    <li class="nav-item ">
      <a class="nav-link" href="{{ path('app_categorie_index')}}">
        <i class="mdi mdi-grid-large menu-icon"></i>
        <span class="menu-title">Categories</span>
      </a>
    </li>
    {% endblock %}
{% block body %}
    <h1>Produits</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ produit.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ produit.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img class="img-fluid" src="{{ asset('uploads/'~produit.image)}}" alt=""></td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ produit.prix }}</td>
            </tr>
            <tr>
                <th>Stock</th>
                <td>{{ produit.stock }}</td>
            </tr>
        </tbody>
    </table>

    <a class="w-100 btn btn-secondary" href="{{ path('admin_produits_index') }}">back to list</a>

    <a class="w-100 btn btn-secondary" href="{{ path('app_produits_edit', {'id': produit.id}) }}">edit</a>

    {{ include('produits/_delete_form.html.twig') }}
{% endblock %}
