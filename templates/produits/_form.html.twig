<div class="container">
    {{ form_start(form, {'attr': {'class': 'form-horizontal w-100', 'novalidate': 'novalidate'}}) }}
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                {{ form_label(form.nom, 'Nom', {'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.nom) }}
            </div>
            <div class="form-group">
                {{ form_label(form.description, 'Description', {'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.description) }}
            </div>
            <div class="form-group">
                {{ form_label(form.image, 'Image', {'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.image) }}
            </div>
            <div class="form-group">
                {{ form_label(form.prix, 'Prix', {'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(form.prix, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.prix) }}
            </div>
            <div class="form-group">
                {{ form_label(form.stock, 'Stock', {'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(form.stock, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.stock) }}
            </div>
            <div class="form-group">
                {{ form_label(form.idcategorie, 'ID Categorie', {'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(form.idcategorie, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.idcategorie) }}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <button type="submit" class="btn btn-primary w-100">{{ button_label|default('Save') }}</button>
        </div>
    </div>
    {{ form_end(form) }}
</div>
