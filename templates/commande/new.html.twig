        <div class="container d-flex justify-content-center">
    <form action="" method="POST"> <!-- Assurez-vous de spécifier la route correcte -->
        <div class="form-group">
            {{ form_start(form) }}
            {% if form_errors(form) %}
            <div class="alert alert-danger">
                {{ form_errors(form) }}
            </div>
            {% endif %}
            <div class="form-group">
                {{ form_label(form.adresseLivraison) }}
                {{ form_widget(form.adresseLivraison, { 'attr': {'class': 'form-control'} }) }}
                {% if form_errors(form.adresseLivraison) %}
                <div class="invalid-feedback">{{ form_errors(form.adresseLivraison) }}</div>
                {% endif %}
            </div>
            <div class="form-group">
                {{ form_label(form.numTel) }}
                {{ form_widget(form.numTel, { 'attr': {'class': 'form-control'} }) }}
                {% if form_errors(form.numTel) %}
                <div class="invalid-feedback">{{ form_errors(form.numTel) }}</div>
                {% endif %}
            </div> 
            <div class="form-group">
                {{ form_label(form.livreur) }}
                {{ form_widget(form.livreur, { 'attr': {'class': 'form-control'} }) }}
                {% if form_errors(form.livreur) %}
                <div class="invalid-feedback">{{ form_errors(form.livreur) }}</div>
                {% endif %}
            </div>
            <button type="submit" class="btn btn-primary">Add</button>
       
            {{ form_end(form) }}
